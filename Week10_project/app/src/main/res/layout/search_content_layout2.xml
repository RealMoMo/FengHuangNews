<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_lv_moreimg_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_lv2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/search_lv_padding"
        android:paddingRight="@dimen/search_lv_padding"
        android:paddingTop="@dimen/search_lv_padding"
        android:textColor="@color/search_lv_titleColor"
        android:textSize="@dimen/search_lv_titlesize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/search_lv_moreimg_margin">

        <ImageView
            android:id="@+id/serach_lv2_iv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/search_lv_moreimg_margin"
            android:paddingLeft="@dimen/search_lv_moreimg_margin" />

        <ImageView
            android:id="@+id/search_lv2_iv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/search_lv_moreimg_margin"
            android:paddingLeft="@dimen/search_lv_moreimg_margin" />

        <ImageView
            android:id="@+id/search_lv2_iv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/search_lv_moreimg_margin"
            android:paddingLeft="@dimen/search_lv_moreimg_margin" />


    </LinearLayout>

    <TextView
        android:gravity="center"
        android:paddingLeft="@dimen/search_lv_padding"
        android:id="@+id/search_lv2_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/search_lv_sourceColor"
        android:textSize="@dimen/search_lv_sourcesize" />

</LinearLayout>