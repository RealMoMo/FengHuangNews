<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="momo.com.week10_project.ui.LiveActivity">

    <RelativeLayout
        android:background="@color/activity_live_titleBackground"
        android:paddingTop="@dimen/activity_live_titlePadding"
        android:paddingBottom="@dimen/activity_live_titlePadding"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_live_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ifeng_title_back"
            />

        <TextView
            android:textSize="@dimen/activity_live_textsize"
            android:textColor="@color/activity_live_titleColor"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播"/>
    </RelativeLayout>




    <in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh"
        android:background="#fff"
        ptr:ptr_duration_to_close="200"
        ptr:ptr_duration_to_close_header="1000"
        ptr:ptr_keep_header_when_refresh="true"
        ptr:ptr_pull_to_fresh="false"
        ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        ptr:ptr_resistance="1.7">

    <ListView
        android:id="@+id/live_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>


</LinearLayout>
