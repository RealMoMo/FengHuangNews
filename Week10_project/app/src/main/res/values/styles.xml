<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--WelcomeActivity theme-->
    <style name="WelcomeTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--MainActivity theme-->
    <style name="MainActivityTheme" parent="WelcomeTheme">

    </style>


    <!--MainActivity theme-->
    <style name="LiveActivityTheme" parent="WelcomeTheme">

    </style>

    <!--MainActivity theme-->
    <style name="Live_lvContentActivityTheme" parent="WelcomeTheme">
    </style>

    <!--NewsContentActivity theme-->
    <style name="News_ContentActivityTheme" parent="WelcomeTheme">

    </style>

    <!--searchActivity theme-->
    <style name="SearchActivityTheme" parent="WelcomeTheme">

    </style>


    <!--LoginActivity theme-->
    <style name="LoginActivityTheme" parent="WelcomeTheme">

    </style>

    <style name="account_secondhead_textview_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawablePadding">@dimen/fragment_account_secondhead_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/fragment_account_secondhead_textsize</item>
    </style>

    <style name="account_item_layout">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="account_item_textview">
        <item name="android:textColor">@color/fragment_account_item_text</item>
        <item name="android:textSize">@dimen/fragment_account_item_textsize</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
